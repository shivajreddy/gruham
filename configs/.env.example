# Gruham Environment Variables
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to git (it contains secrets!)

# ============================================
# GENERAL SETTINGS
# ============================================
TZ=America/New_York                    # Your timezone (https://en.wikipedia.org/wiki/List_of_tz_database_time_zones)
PUID=1000                              # User ID (run: id -u)
PGID=1000                              # Group ID (run: id -g)

# ============================================
# NETWORK SETTINGS
# ============================================
LOCAL_NETWORK=192.168.4.0/24          # Your local subnet
BEELINK_IP=192.168.4.100              # Beelink static IP
NAS_IP=192.168.4.102                  # NAS static IP
PI_HOLE_IP=192.168.4.101              # Pi-hole static IP

# ============================================
# STORAGE PATHS
# ============================================
# Base directory for all Gruham data
GRUHAM_ROOT=/opt/gruham

# NAS mount points
NAS_MEDIA=/mnt/nas/media              # NAS media library
NAS_BACKUPS=/mnt/nas/backups          # NAS backup location

# Local docker data
DOCKER_DATA=/opt/gruham               # Local config storage

# ============================================
# DOMAIN & SSL SETTINGS
# ============================================
DOMAIN_NAME=yourdomain.com            # Your actual domain
CF_EMAIL=your-email@example.com       # Cloudflare account email
CF_API_KEY=your_cloudflare_api_key    # Cloudflare API key

# ============================================
# PLEX SETTINGS
# ============================================
PLEX_CLAIM=claim-XXXXXXXXXXXXXXXXXXXX # Get from https://www.plex.tv/claim/
ADVERTISE_IP=http://192.168.4.100:32400

# ============================================
# JELLYFIN SETTINGS
# ============================================
JELLYFIN_PUBLISHED_SERVER_URL=https://jellyfin.yourdomain.com

# ============================================
# HOME ASSISTANT SETTINGS
# ============================================
# No special env vars needed, configured via UI

# ============================================
# CLOUDFLARE TUNNEL SETTINGS
# ============================================
TUNNEL_TOKEN=your_cloudflare_tunnel_token  # Get from Cloudflare Zero Trust dashboard

# ============================================
# DATABASE PASSWORDS (Generate strong passwords!)
# ============================================
# Use: openssl rand -base64 32
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE
MYSQL_ROOT_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE

# ============================================
# BACKUP SETTINGS (Duplicati)
# ============================================
DUPLICATI_ENCRYPTION_PASSPHRASE=CHANGE_ME_STRONG_PASSWORD_HERE
BACKUP_DEST=file:///mnt/nas/backups/duplicati  # or cloud: b2://bucket-name

# ============================================
# ADDITIONAL SERVICE SETTINGS
# ============================================
# Overseerr
OVERSEERR_PORT=5055

# Tautulli
TAUTULLI_PORT=8181

# Filebrowser
FILEBROWSER_PORT=8080

# Homepage Dashboard
HOMEPAGE_PORT=3000

# Portainer
PORTAINER_PORT=9443

# Nginx Proxy Manager
NPM_PORT_HTTP=80
NPM_PORT_HTTPS=443
NPM_PORT_ADMIN=81

# ============================================
# OPTIONAL: VPN SETTINGS (for torrent client)
# ============================================
VPN_PROVIDER=nordvpn               # or mullvad, protonvpn, etc.
VPN_USER=your_vpn_username
VPN_PASS=your_vpn_password
VPN_SERVER=us1234.nordvpn.com

# ============================================
# NOTES
# ============================================
# After copying to .env:
# 1. Replace all CHANGE_ME values
# 2. Set your actual domain name
# 3. Get Plex claim token if using Plex
# 4. Set up Cloudflare Tunnel and get token
# 5. Adjust paths if different from defaults
# 6. chmod 600 .env (protect from other users)
